@model UsuarioModel;
@{
    ViewData["Title"] = "Apagar usuário";
}

<div class="container text-center">

    <h3 class="display-4">Realmente deseja apagar o usuário (@Model.Nome)?</h3>

    <div class="mt-5">
        <a role="button" class="btn btn-success w-50" asp-controller="Usuario" asp-action="Index">
            <i class="bi bi-box-arrow-left"></i>
            Voltar
        </a>
        <a class="btn btn-danger w-50 mt-2" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">
            <i class="bi bi-trash3-fill"></i>
            Apagar
        </a>
    </div>

</div>